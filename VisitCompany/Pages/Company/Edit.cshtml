@page 
@using Microsoft.EntityFrameworkCore
@model ServiceHost.Areas.Administration.Pages.Shop.Products.EditModel
@{
    Layout = "Shared/_AdminLayout";
}


<div class="modal-header">
  
    <h4 class="modal-title">ویرایش  محصول </h4>
</div>


<form method="post" asp-page-handler="Edit" enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="@Model.Command.CompanyName" class="control-label"> نام شرکت </label>
                    <input type="text" class="form-control" asp-for="@Model.Command.CompanyName">
                    <span asp-validation-for="@Model.Command.CompanyName" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Command.Brand  " class="control-label">نام برند </label>
                    <input type="text" class="form-control" asp-for="Command.Brand ">
                    <span asp-validation-for="Command.Brand " class="error"></span>
                </div>
            </div>
       

        </div>

        <div class="row">

            

            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Command.CategoryId " class="control-label">گروه محصول </label>
                    <select class="form-control" asp-for="Command.CategoryId" asp-items="Model.CompanyCategories">
                        <option value="0">انتخاب دسته بندی</option>

                    </select>
                    <span asp-validation-for="Command.CategoryId " class="error"></span>
                </div>
            </div>


            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Command.LicenceId " class="control-label">گروه محصول </label>
                    <select class="form-control" asp-for="Command.LicenceId" asp-items="Model.LicenceCategories">
                        <option value="0">انتخاب دسته بندی</option>

                    </select>
                    <span asp-validation-for="Command.LicenceId " class="error"></span>
                </div>
            </div>
        </div>


        
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Command.ManagerName" class="control-label"> مدیر شرکت</label>
                    <input type="text" class="form-control" asp-for="Command.ManagerName">
                    <span class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="@Model.Command.SecurityManagerName " class="control-label"> مدیر امنیت </label>
                    <input type="text" class="form-control" asp-for="@Model.Command.SecurityManagerName">
                    <span class="error"></span>
                </div>
            </div>
        </div>
  

            <div class="col-md-12">
                <div class="form-group no-margin">
                    <label asp-for="@Model.Command.Description" class="control-label">توضیحات</label>
                    <textarea class="form-control autogrow" asp-for="@Model.Command.Description"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span class="error"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Command.PhoneNumber" class="control-label">شماره تلفن </label>
                <input type="number" class="form-control" asp-for="Command.PhoneNumber">
                    <span asp-validation-for="Command.PhoneNumber" class="error"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Command.NationalCode" class="control-label"> شناسه ملی </label>
                    <input type="text" class="form-control" asp-for="Command.NationalCode">
                    <span asp-validation-for="Command.NationalCode" class="error"></span>
                </div>
            </div>

          
            <div class="form-group">
                <label class="control-label">انتخاب ارزیاب‌ها</label>
                <select asp-for="Command.AccountIds" asp-items="Model.Accounts" class="form-control" multiple="multiple" id="AccountIdSelect">
                </select>
                <span asp-validation-for="Command.AccountIds" class="error"></span>
            </div>
        </div>

    <input type="hidden" asp-for="Command.Id" value="@Model.Command.Id" />

    <div class="modal-footer">
        <button type="submit" class="btn btn-info waves-effect waves-light">ویرایش</button>
    </div>
</form>

<style>
    .select2-container--default .select2-selection--multiple {
        direction: rtl;
        width: 100%;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#AccountIdSelect').select2({
                placeholder: "انتخاب ارزیاب‌ها",
                allowClear: true,
                language: "fa",
                width: 'resolve' // تنظیم عرض
            });
        });
    </script>
}