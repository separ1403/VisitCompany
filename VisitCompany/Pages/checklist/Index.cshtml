@page
@model VisitCompany.Pages.checklist.IndexModel
@{
}

@{
    Layout = "Shared/_AdminLayout";
    ViewData["title"] = "مدیریت چک لیست ها";

}


@if (@TempData["SuccessMessageameEd"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessageameEd"]

    </div>
}

@if (@TempData["ErrorMessageameEd"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessageameEd"]

    </div>
}


<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull- left">@ViewData["title"]</h4>

       
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">جستجو در چک لیست ها </h3>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form" method="get">
                    <div class="form-group">
                        <label class="sr-only" asp-for="@Model.SearchModel.Name"></label>
                        <input class="form-control" asp-for="@Model.SearchModel.Name" placeholder="  عنوان چک لیست">
                    </div>

                    <div class="form-group">
                        <label class="sr-only" asp-for="@Model.SearchModel.CompanyId"></label>
                        <select class="form-control" asp-for="@Model.SearchModel.CompanyId" asp-items="@Model.Companies" id="CategoryIdSelect">

                            <option value="0">  شرکت مورد نظر را انتخاب نمایید</option>

                        </select>
                    </div>




                    <div class="form-group">
                        <label class="sr-only" asp-for="@Model.SearchModel.AccountId"></label>
                        <select class="form-control" asp-for="@Model.SearchModel.AccountId" asp-items="@Model.Accounts" id="AccountSelect">

                            <option value="0"> ارزیاب را انتخاب کنید</option>

                        </select>
                    </div>




                    <button type="submit" class="btn btn-success waves-effect waves-light m-l-10">جستجو</button>
                    <a class="btn btn-primary waves-effect waves-light m-l-10" asp-page="./Index">مشاهده همه</a>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست چک لیست ها (@Model.Checklists.Count)</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>عنوان</th>
                                    <th>نام فرد مسئول حاضر در کسب و کار</th>
                                    <th>مسئولیت فرد</th>
                                    <th>شماره تماس</th>
                                    <th>تعداد کارمندان شرکت</th>
                                    <th>تعداد مشتریان شرکت</th>
                                    <th>نام شرکت</th>
                                    <th>نام ارزیاب</th>
                                    <th>معدل نمرات ارزیابی عمومی</th>
                                    <th>معدل نمرات ارزیابی Juniper</th>
                                    <th>معدل نمرات ارزیابی Win2019</th>
                                    <th>معدل نمرات ارزیابی Hpedl380</th>
                                    <th>عملیات</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Checklists)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Title</td>
                                        <td>@item.NamePeopleCo</td>
                                        <td>@item.RspponsePeopleCo</td>
                                        <td>@item.PhonePeopleCo</td>
                                        <td>@item.CountEmployees</td>
                                        <td>@item.CountFolowers</td>
                                        <td>@item.Company</td>
                                        <td>@item.Accounts</td>
                                        <td>@item.AverageGeneral</td>
                                        <td>@item.AverageJunipper</td>
                                        <td>@item.AverageWin2019</td>
                                        <td>@item.AverageHpedl380</td>
                                        <td>
                                            <a class="btn btn-warning btn-custome waves-effect waves-light pull-right m-rl-5">
                                                <a class="fa fa-edit" asp-page="./ChecklistMenu" asp-route-id="@item.Id">ویرایش</a>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

 
<a href="/checklist/ChecklistMenu">بازگشت به صفحه‌ی چک لیست ها </a>

@section Scripts {
    <script src="~/adminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/adminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>

    <script>
        $(document).ready(function () {
            $('#CategoryIdSelect').select2({
                placeholder: "انتخاب دسته بندی",
                allowClear: true,
                language: "fa"
            });
        });

     </script>

    <script>
        $(document).ready(function () {
            $('#AccountSelect').select2({
                placeholder: "انتخاب دسته بندی",
                allowClear: true,
                language: "fa"
            });
        });

    </script>


}
