@page 
@using Microsoft.EntityFrameworkCore
@model VisitCompany.Areas.Administration.Pages.Accounts.Account.EditModel

@{
    Layout = "Shared/_AdminLayout";
    ViewData["title"] = "مدیریت  کاربران";
}


<div class="modal-header">
  
    <h4 class="modal-title">ویرایش  کاربر </h4>
</div>


<form method="post" asp-page-handler="Edit" enctype="multipart/form-data">

    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="@Model.Command.Name " class="control-label">نام</label>
                    <input type="text" class="form-control" asp-for="@Model.Command.Name">
                    <span asp-validation-for="@Model.Command.Name" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="@Model.Command.Fullname " class="control-label"> نام خانوادگی</label>
                    <input type="text" class="form-control" asp-for="@Model.Command.Fullname">
                    <span asp-validation-for="@Model.Command.Fullname" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Command.Username " class="control-label">نام کاربری </label>
                    <input type="text" class="form-control" asp-for="Command.Username ">
                    <span asp-validation-for="Command.Username " class="error"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Command.Mobile " class="control-label">تلفن همراه </label>
                    <input type="text" class="form-control" asp-for="Command.Mobile ">
                    <span asp-validation-for="Command.Mobile " class="error"></span>
                </div>
            </div>

            
        </div>

        <div class="row">


            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Command.RoleId " class="control-label">نقش ها  </label>
                    <select class="form-control" asp-for="Command.RoleId" asp-items="Model.Roles">
                        <option value="0">انتخاب دسته بندی</option>

                    </select>
                  
                    <span asp-validation-for="Command.RoleId " class="error"></span>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Command.StateCategoryId " class="control-label"> محل خدمت  </label>
                    <select class="form-control" asp-for="Command.StateCategoryId" asp-items="Model.States">
                        <option value="0">انتخاب  محل خدمت</option>

                    </select>

                    <span asp-validation-for="Command.StateCategoryId " class="error"></span>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="@Model.Command.Description " class="control-label">توضیحات</label>
                    <input type="text" class="form-control" asp-for="@Model.Command.Description">
                    <span asp-validation-for="@Model.Command.Description" class="error"></span>
                </div>
            </div>
        </div>


      


    
 
        

        <input type="hidden" asp-for="Command.Id" value="@Model.Command.Id " />

    </div>

    <div class="modal-footer">
        
        <button type="submit" class="btn btn-info waves-effect waves-light">ویرایش</button>
    </div>

    
</form>
